{
    "manifest_version" : 2,
    "name" : "Cursecatcher",
    "description" : "Remove the Curse cruft from MTG Salvation",
    "version" : "1.1",
    "icons" : {
        "48" : "img/icon-48.png",
        "128" : "img/icon-128.png"
    },
    "permissions" : [
        "storage"
    ],
    "content_scripts" : [
        {
            "matches" : [
                "*://*.mtgsalvation.com/*"
            ],
            "css" : [
                "css/curse.css"
            ],
            "run_at" : "document_start"
        }
    ],
    "background" : {
        "scripts" : [ "js/update.js" ],
        "persistent" : false
    }
}
